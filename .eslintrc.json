{
  "extends": [
    "standard",
    "standard-jsx"
  ],
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ]
  }
}
